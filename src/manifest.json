{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"short_name": "STay",
	"version": "0.1",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"homepage_url": "https://github.com/crash007/st-notifier",
	"author": "crash007",
	"permissions": ["downloads","storage", "alarms", "notifications", "https://www.st.nu/" ],
	"icons": {
		"128": "st-notifier-128.png"
	},
	"background": {
		"scripts": ["libs/jquery-3.3.1.min.js", "common.js", "background.js", "libs/lz-string.js", "libs/compression.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "options.html"
	},
	"content_scripts": [
        {
			"css": [ "frontend.css" ],
            "matches": ["http://www.st.nu/*", "https://www.st.nu/*"],
            "js": ["libs/jquery-3.3.1.min.js", "common.js", "frontend.js", "libs/lz-string.js","libs/compression.js"],
            "run_at": "document_end"
        }
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	  }
}
