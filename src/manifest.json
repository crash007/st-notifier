{
	"manifest_version": 2,
	"name": "St.nu unlocked premium article notifier",
	"short_name": "St.nu notifier",
	"version": "0.1",
	"description": "Get notified when a new unlocked premium article is published on st.nu",
	"homepage_url": "https://github.com/crash007/st-notifier",
	"author": "crash007",
	"permissions": ["storage", "alarms", "notifications", "https://www.st.nu/" ],
	"icons": {
		"128": "st-notifier-128.png"
	},
	"background": {
		"scripts": ["libs/jquery-3.3.1.min.js", "background.js"],
		"persistent": false
	},
	"browser_action": {},
	"content_scripts": [
        {
			"css": [ "frontend.css" ],
            "matches": ["http://www.st.nu/*", "https://www.st.nu/*"],
            "js": ["libs/jquery-3.3.1.min.js", "frontend.js"],
            "run_at": "document_end"
        }
    ]
}